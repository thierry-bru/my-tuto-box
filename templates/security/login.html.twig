<turbo-frame id="content">
<form method="post" action="{{ path('app_login')}}">
   {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    <div class="card w-50 mx-auto" >
    <img  class="card-img-top" src="{{ asset('pictures/interface/software-developer.jpg')}}">
<h5 class="card-title p-3 m-0  bg-primary">Sign in</h5>
    <div class="card-body">
            <div><label for="username">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}">
                            </div>
                            <div class="d-flex justify-content-end"> <button class="btn btn-lg btn-primary" type="submit"> Sign in </button> </div>
        
    </div>
</form>
</turbo-frame> 
